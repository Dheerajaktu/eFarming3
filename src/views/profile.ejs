<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('layout/head.ejs')%>
        <link rel="stylesheet" href="stylesheets/home.css">
        <script src="javascripts/users.js"></script>
        <style>
            label {
                font-size: 10px;
                font-family: 'Open Sans', sans-serif;
            }

            ::-webkit-input-placeholder {
                font-size: 10px;
            }
        </style>
</head>

<body class="container">
    <header>
        <%- include('layout/header.ejs')%>
    </header>
    <main>
        <%- include('layout/sidenav.ejs')%>
    </main>


    <div class="container rounded bg-white mt-0 shadow">
        <div class="row">
            <div class="col-md-4 border-right">
                <div class="d-flex flex-column align-items-center text-center p-5 py-8"><img class="mt-8"
                        src="/images/avatarLogin1.jpg" width="120">
                    <span class="font-weight-bold">
                        <%= user1.firstName%>
                            <%= user1.lastName%>
                    </span><span class="text-black-50">
                        <%= user1.email%>
                    </span><span>
                        <%= user1.country%>
                    </span>
                </div>

                <div>
                    <label>Upload Photo</label>
                    <input type="file" class="form-control" value="" placeholder="">
                </div>

            </div>
            <div class="col-md-8">
                <form id="profileForm">
                    <div class="p-3 py-5">

                        <div class="row">
                            <div class="col-md-6">
                                <label>First name
                                    <span style="color: red">*</span>
                                </label>
                                <input type="text" class="form-control" placeholder="First name"
                                    value="<%= user1.firstName%>" name="firstName" required id="firstName">

                            </div>

                            <div class="col-md-6">
                                <label>Last name</label>
                                <input type="text" class="form-control" value="<%= user1.lastName%>"
                                    placeholder="Last name" name="lastName" required id="lastName">
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-12">
                                <label>Email<span style="color: red">*</span></label>
                                <input type="text" class="form-control" placeholder="Email" value="<%= user1.email%>"
                                    name="email" required id="email">
                            </div>

                        </div>
                        <div class="row mt-2">
                            <div class="col-md-4">
                                <label>Primary Mobile Number<span style="color: red">*</span> </label>
                                <input type="text" class="form-control" placeholder="Mobile Number"
                                    value="<%= user1.mobileNumber%>" required name="mobileNumber" id="mobileNumber">
                            </div>
                            <div class="col-md-4">
                                <label>Alternate Mobile Number</label>
                                <input type="text" class="form-control" value="<%= user1.alternateMobileNumber%>"
                                    placeholder="Alternate Mobile Number" name="alternateMobileNumber"
                                    id="alternateMobileNumber">
                            </div>
                            <div class="col-md-4">
                                <label>Country</label>
                                <input type="text" class="form-control" value="<%= user1.country%>"
                                    placeholder="Country" name="country" id="country">
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-4">
                                <label>State</label>
                                <input type="text" class="form-control" placeholder="State" value="<%= user1.state%>"
                                    name="state" id="state">
                            </div>

                            <div class="col-md-4">
                                <label>District</label>
                                <input type="text" class="form-control" value="<%= user1.district%>"
                                    placeholder="District" name="district" di="district">
                            </div>

                            <div class="col-md-4">
                                <label>PIN Code</label>
                                <input type="text" class="form-control" value="<%= user1.pinCode%>"
                                    placeholder="Pin Code" name="pinCode" id="pinCode">
                            </div>
                        </div>


                        <div class="row mt-2">
                            <div class="col-md-12">
                                <label>Address</label>
                                <input type="text" class="form-control" placeholder="Address"
                                    value="<%= user1.address%>" id="address" name="address">
                            </div>
                        </div>

                        <div class="row mt-2">
                            <div class="col-md-4">
                                <label>Account Verified</label>
                                <input type="text" class="form-control" placeholder="" value="<%= user1.verifiedUser%>"
                                    name="verifiedUser" id="accountVerified">
                            </div>
                            <div class="col-md-4">
                                <label>other</label>
                                <input type="text" class="form-control" placeholder="" value="" disabled>
                            </div>
                            <div class="col-md-4">
                                <label>other</label>
                                <input type="text" class="form-control" placeholder="" value="" disabled>
                            </div>
                        </div>

                        <div class="row">

                            <div class="col-md-3">
                                <div class="mt-3 text-right"><button class="btn btn-sm btn-success profile-button"
                                        id="saveProfileButton" type="button">Save
                                        Profile</button></div>

                            </div>

                            <div class="col-md-3">
                                <div class="mt-3 text-right"><button class="btn btn-sm btn-danger profile-button"
                                        type="button">Reset
                                    </button></div>

                            </div>
                        </div>


                    </div>
                </form>
                <input type="hidden" id="hiddenfield" value="<%= user1._id%>" />
            </div>
        </div>
    </div>



    <footer>
        <%- include('layout/footer.ejs')%>
    </footer>

</body>

</html>