<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('layout/head.ejs')%>
        <link rel="stylesheet" href="stylesheets/home.css">
        <script src="javascripts/users.js"></script>
        <style>
            label {
                font-size: 10px;
                font-family: 'Open Sans', sans-serif;
            }

            ::-webkit-input-placeholder {
                font-size: 10px;
            }
        </style>
</head>

<body class="container">
    <header>
        <%- include('layout/header.ejs')%>
    </header>
    <main>
        <%- include('layout/sidenav.ejs')%>
    </main>


    <div class="container rounded bg-white mt-0 shadow">
        <div class="row">
            <div class="col-md-4 border-right">
                <div class="d-flex flex-column align-items-center text-center p-5 py-8"><img class="mt-8"
                        src="/images/avatarLogin1.jpg" width="120">
                    <span class="font-weight-bold">John
                        Doe</span><span class="text-black-50">john_doe12@bbb.com</span><span>United States</span>
                </div>

                <div>
                    <label>Upload Photo</label>
                    <input type="file" class="form-control" value="" placeholder="">
                </div>

            </div>
            <div class="col-md-8">
                <div class="p-3 py-5">

                    <div class="row">
                        <div class="col-md-4">
                            <label>First name</label>
                            <input type="text" class="form-control" placeholder="First name" value="" required>
                        </div>

                        <div class="col-md-4">
                            <label>Middle name</label>
                            <input type="text" class="form-control" value="" placeholder="Middle name">
                        </div>
                        <div class="col-md-4">
                            <label>Last name</label>
                            <input type="text" class="form-control" value="" placeholder="Last name" required>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <label>Email</label>
                            <input type="text" class="form-control" placeholder="Email" value="" required>
                        </div>
                        <div class="col-md-6">
                            <label>Password</label>
                            <input type="password" class="form-control" value="" placeholder="Password" required>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-4">
                            <label>Primary Mobile Number</label>
                            <input type="text" class="form-control" placeholder="Mobile Number" value="" required>
                        </div>
                        <div class="col-md-4">
                            <label>Alternate Mobile Number</label>
                            <input type="text" class="form-control" value="" placeholder="Alternate Mobile Number">
                        </div>
                        <div class="col-md-4">
                            <label>Country</label>
                            <input type="text" class="form-control" value="India" placeholder="Country" disabled>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-4">
                            <label>State</label>
                            <input type="text" class="form-control" placeholder="State" value="">
                        </div>

                        <div class="col-md-4">
                            <label>District</label>
                            <input type="text" class="form-control" value="" placeholder="District">
                        </div>

                        <div class="col-md-4">
                            <label>PIN Code</label>
                            <input type="text" class="form-control" value="" placeholder="Account Number">
                        </div>
                    </div>


                    <div class="row mt-2">
                        <div class="col-md-12">
                            <label>Address</label>
                            <input type="text" class="form-control" placeholder="Address" value="">
                        </div>
                    </div>

                    <div class="row mt-2">
                        <div class="col-md-4">
                            <label>Account Verified</label>
                            <input type="text" class="form-control" placeholder="" value="Yes">
                        </div>
                        <div class="col-md-4">
                            <label>other</label>
                            <input type="text" class="form-control" placeholder="" value="">
                        </div>
                        <div class="col-md-4">
                            <label>other</label>
                            <input type="text" class="form-control" placeholder="" value="">
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-md-3">
                            <div class="mt-3 text-right"><button class="btn btn-sm btn-success profile-button"
                                    type="button">Save
                                    Profile</button></div>

                        </div>

                        <div class="col-md-3">
                            <div class="mt-3 text-right"><button class="btn btn-sm btn-danger profile-button"
                                    type="button">Reset
                                </button></div>

                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>



    <footer>
        <%- include('layout/footer.ejs')%>
    </footer>

</body>

</html>